<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cinema.mapper.ReplyMapper">

	<select id="get" resultType="com.cinema.domain.ReplyVO">

		select * from movie_comment where
		replyNO=#{replyNO}


	</select>

	<select id="getListFindByMovieNO"
		resultType="com.cinema.domain.ReplyVO">

		select * from movie_comment where movieNO=#{movieNO} and
		title != 'NO TITLE'

	</select>

	<select id="getListFindByMemberNO"
		resultType="com.cinema.domain.ReplyVO">

		select * from comment where memberNO=#{memberNO}

	</select>

	<insert id="insert">

		insert into movie_comment
		(replyNO,movieNO,memberNO,title,content,stars)
		values
		(SEQ_MOVIE_COMMENT.nextval,#{movieNO},#{memberNO},#{title},#{content},#{stars})

	</insert>

	<update id="update">

		update movie_comment set title = #{title}
		,content=#{content},stars=#{stars}
		where replyNO =
		#{replyNO}

	</update>

	<delete id="delete">

		delete from movie_comment where replyNO = #{replyNO}

	</delete>

</mapper>